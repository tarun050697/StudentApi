# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           student.controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
#GET     /assets/*file               student.controllers.Assets.versioned(path="/public", file: Asset)

#student-api routes
GET     /searchStudents/:query            student.controllers.StudentController.searchStudents(query : String)
GET     /listStudents               student.controllers.StudentController.listStudents(limit : Int, offset : Int)
POST    /addStudents                student.controllers.StudentController.addStudents(request: Request)
POST    /deleteStudent              student.controllers.StudentController.deleteStudent(request: Request)
POST    /updateStudents             student.controllers.StudentController.updateStudents(request: Request)